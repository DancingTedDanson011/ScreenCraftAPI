---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us - ScreenCraft API">
  <Navbar />
  <main class="min-h-screen bg-[#0D1117]">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="max-w-2xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-[#F0F6FC] mb-4">Get in Touch</h1>
          <p class="text-[#8B949E]">
            Have questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
          </p>
        </div>

        <!-- Contact Form -->
        <form id="contact-form" class="space-y-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-[#F0F6FC] mb-2">
                Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 bg-[#161B22] border border-[#30363D] rounded-lg text-[#F0F6FC] placeholder-[#6E7681] focus:outline-none focus:border-[#1F6FEB] transition-colors"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-[#F0F6FC] mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-[#161B22] border border-[#30363D] rounded-lg text-[#F0F6FC] placeholder-[#6E7681] focus:outline-none focus:border-[#1F6FEB] transition-colors"
                placeholder="you@example.com"
              />
            </div>
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-[#F0F6FC] mb-2">
              Subject
            </label>
            <select
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 bg-[#161B22] border border-[#30363D] rounded-lg text-[#F0F6FC] focus:outline-none focus:border-[#1F6FEB] transition-colors"
            >
              <option value="">Select a topic</option>
              <option value="general">General Inquiry</option>
              <option value="support">Technical Support</option>
              <option value="billing">Billing Question</option>
              <option value="enterprise">Enterprise Sales</option>
              <option value="partnership">Partnership</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-[#F0F6FC] mb-2">
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="6"
              required
              class="w-full px-4 py-3 bg-[#161B22] border border-[#30363D] rounded-lg text-[#F0F6FC] placeholder-[#6E7681] focus:outline-none focus:border-[#1F6FEB] transition-colors resize-none"
              placeholder="How can we help you?"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-6 py-3 bg-[#238636] text-white font-semibold rounded-lg hover:bg-[#2EA043] transition-colors"
          >
            Send Message
          </button>
        </form>

        <!-- Alternative Contact -->
        <div class="mt-12 pt-12 border-t border-[#30363D]">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 text-center">
            <div>
              <div class="w-12 h-12 bg-[#161B22] rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-[#238636]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-[#F0F6FC] font-semibold mb-1">Email</h3>
              <p class="text-[#8B949E] text-sm">support@screencraft.dev</p>
            </div>
            <div>
              <div class="w-12 h-12 bg-[#161B22] rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-[#238636]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <h3 class="text-[#F0F6FC] font-semibold mb-1">Discord</h3>
              <p class="text-[#8B949E] text-sm">Join our community</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <Footer />
  </main>
</Layout>

<script>
  const form = document.getElementById('contact-form');
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form as HTMLFormElement);
    const data = Object.fromEntries(formData.entries());

    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        alert('Message sent successfully!');
        (form as HTMLFormElement).reset();
      } else {
        alert('Failed to send message. Please try again.');
      }
    } catch (error) {
      alert('Failed to send message. Please try again.');
    }
  });
</script>
