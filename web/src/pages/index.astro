---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import CodeExample from '../components/CodeExample.astro';
import Pricing from '../components/Pricing.astro';
import FAQ from '../components/FAQ.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "Screenshot API - Capture Any URL as PNG, PDF | ScreenCraft";
const pageDescription = "Generate pixel-perfect screenshots and PDFs from any URL with our simple REST API. No Puppeteer setup required. Free tier with 100 screenshots/month. Sub-2-second response times. Built for developers.";
const pageKeywords = "screenshot API, PDF generation API, URL to image, web capture API, headless browser API, website screenshot, HTML to PDF, REST API screenshots, webpage to PNG, automated screenshots, visual regression testing, Puppeteer alternative";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
>
  <Navbar />
  <main>
    <Hero />
    <Features />
    <CodeExample />
    <Pricing />
    <FAQ />
    <Footer />
  </main>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
