---
// Navbar Component - ScreenCraft
const navLinks = [
  { href: '/docs', label: 'Docs' },
  { href: '/pricing', label: 'Pricing' },
  { href: '/status', label: 'Status' },
  { href: '/changelog', label: 'Changelog' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[#0D1117]/80 backdrop-blur-md border-b border-[#30363D]">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
        <div class="w-8 h-8 bg-gradient-to-r from-[#238636] to-[#2EA043] rounded flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <span class="text-lg font-bold text-[#F0F6FC]">ScreenCraft</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-sm text-[#8B949E] hover:text-[#F0F6FC] transition-colors"
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Auth Buttons -->
      <div class="hidden md:flex items-center gap-4">
        <a
          href="/login"
          class="text-sm text-[#8B949E] hover:text-[#F0F6FC] transition-colors"
        >
          Sign In
        </a>
        <a
          href="/login"
          class="px-4 py-2 bg-[#238636] text-white text-sm font-medium rounded-lg hover:bg-[#2EA043] transition-colors"
        >
          Get API Key
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-[#8B949E] hover:text-[#F0F6FC] transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-4 pt-4 border-t border-[#30363D]">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-sm text-[#8B949E] hover:text-[#F0F6FC] transition-colors"
          >
            {link.label}
          </a>
        ))}
        <div class="flex flex-col gap-2 pt-4 border-t border-[#30363D]">
          <a
            href="/login"
            class="text-sm text-[#8B949E] hover:text-[#F0F6FC] transition-colors"
          >
            Sign In
          </a>
          <a
            href="/login"
            class="px-4 py-2 bg-[#238636] text-white text-sm font-medium rounded-lg hover:bg-[#2EA043] transition-colors text-center"
          >
            Get API Key
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
