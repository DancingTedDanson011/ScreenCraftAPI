<script define:vars={{ API_URL }}>
  // Auth state management
  let isAuthenticated = false;
  let userData = null;

  // Elements
  const authLoading = document.getElementById('auth-loading');
  const authGuest = document.getElementById('auth-guest');
  const authUser = document.getElementById('auth-user');
  const mobileAuthGuest = document.getElementById('mobile-auth-guest');
  const mobileAuthUser = document.getElementById('mobile-auth-user');

  // User display elements
  const userAvatar = document.getElementById('user-avatar');
  const userEmail = document.getElementById('user-email');
  const dropdownEmail = document.getElementById('dropdown-email');
  const mobileUserAvatar = document.getElementById('mobile-user-avatar');
  const mobileUserEmail = document.getElementById('mobile-user-email');

  // Dropdown elements
  const userDropdownBtn = document.getElementById('user-dropdown-btn');
  const userDropdown = document.getElementById('user-dropdown');

  // OAuth buttons
  const githubBtn = document.getElementById('github-btn');
  const googleBtn = document.getElementById('google-btn');
  const mobileGithubBtn = document.getElementById('mobile-github-btn');
  const mobileGoogleBtn = document.getElementById('mobile-google-btn');

  // Logout buttons
  const logoutBtn = document.getElementById('logout-btn');
  const mobileLogoutBtn = document.getElementById('mobile-logout-btn');

  // Mobile menu
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  // Set OAuth URLs
  const githubUrl = `${API_URL}/api/v1/auth/github`;
  const googleUrl = `${API_URL}/api/v1/auth/google`;

  if (githubBtn) githubBtn.href = githubUrl;
  if (googleBtn) googleBtn.href = googleUrl;
  if (mobileGithubBtn) mobileGithubBtn.href = githubUrl;
  if (mobileGoogleBtn) mobileGoogleBtn.href = googleUrl;

  // Check authentication status
  async function checkAuth() {
    try {
      const res = await fetch(`${API_URL}/api/v1/auth/session`, {
        credentials: 'include',
      });
      const data = await res.json();
      isAuthenticated = data.authenticated === true;
      if (isAuthenticated && data.user) {
        userData = data.user;
      }
    } catch (e) {
      console.error('Auth check failed:', e);
      isAuthenticated = false;
      userData = null;
    }

    updateUI();
  }

  // Get user initial from email
  function getUserInitial(email) {
    if (!email) return '?';
    return email.charAt(0).toUpperCase();
  }

  // Update UI based on auth state
  function updateUI() {
    // Hide loading
    authLoading?.classList.add('hidden');

    if (isAuthenticated) {
      // Show logged in state
      authGuest?.classList.add('hidden');
      authGuest?.classList.remove('flex');
      authUser?.classList.remove('hidden');
      authUser?.classList.add('flex');

      mobileAuthGuest?.classList.add('hidden');
      mobileAuthGuest?.classList.remove('flex');
      mobileAuthUser?.classList.remove('hidden');
      mobileAuthUser?.classList.add('flex');

      // Update user display
      if (userData) {
        const email = userData.email || '';
        const avatarUrl = userData.avatarUrl || userData.avatar;
        const initial = getUserInitial(email);

        // Desktop
        if (userAvatar) {
          if (avatarUrl) {
            userAvatar.innerHTML = `<img src="${avatarUrl}" alt="Avatar" class="w-full h-full object-cover" />`;
          } else {
            userAvatar.textContent = initial;
          }
        }
        if (userEmail) {
          userEmail.textContent = email;
        }
        if (dropdownEmail) {
          dropdownEmail.textContent = email;
        }

        // Mobile
        if (mobileUserAvatar) {
          if (avatarUrl) {
            mobileUserAvatar.innerHTML = `<img src="${avatarUrl}" alt="Avatar" class="w-full h-full object-cover" />`;
          } else {
            mobileUserAvatar.textContent = initial;
          }
        }
        if (mobileUserEmail) {
          mobileUserEmail.textContent = email;
        }
      }
    } else {
      // Show guest state
      authGuest?.classList.remove('hidden');
      authGuest?.classList.add('flex');
      authUser?.classList.add('hidden');
      authUser?.classList.remove('flex');

      mobileAuthGuest?.classList.remove('hidden');
      mobileAuthGuest?.classList.add('flex');
      mobileAuthUser?.classList.add('hidden');
      mobileAuthUser?.classList.remove('flex');
    }
  }

  // Logout handler
  async function handleLogout() {
    try {
      await fetch(`${API_URL}/api/v1/auth/logout`, {
        method: 'POST',
        credentials: 'include',
      });
    } catch (e) {
      // Ignore errors
    }
    window.location.href = '/';
  }

  // Event listeners
  logoutBtn?.addEventListener('click', handleLogout);
  mobileLogoutBtn?.addEventListener('click', handleLogout);

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Dropdown toggle
  userDropdownBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    userDropdown?.classList.toggle('hidden');
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (userDropdown && !userDropdown.classList.contains('hidden')) {
      if (!userDropdownBtn?.contains(e.target) && !userDropdown.contains(e.target)) {
        userDropdown.classList.add('hidden');
      }
    }
  });

  // Close dropdown on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && userDropdown && !userDropdown.classList.contains('hidden')) {
      userDropdown.classList.add('hidden');
    }
  });

  // Check auth on load
  checkAuth();
</script>
